{
  "plugins": [
    "import"
  ],
  "rules": {
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "no-extra-semi": 2,
    "comma-spacing": [
      2,
      {
        "after": true
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "import/order": [
      "error"
    ],
    "indent": [
      "error",
      2
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  }
}